<% provide(:title, 'Sign up') %>
<div class = "body">
  <div class= "right-col">
  </div>
  <div class = "helper-right">
    <div class="form col-md-6 col-md-offset-3">
      <%= form_for(@email) do |f| %>
	<div class = "form-group">
      <%= f.email_field :email, placeholder: "Email Address", :class => "form-control"%>
	</div>	
      <%= f.submit "Sign up for our newsletter", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>